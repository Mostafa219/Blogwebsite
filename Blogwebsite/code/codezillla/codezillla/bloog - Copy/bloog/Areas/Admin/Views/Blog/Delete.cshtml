@model Blog


<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
    <div class=" border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Blog</h2>
        </div>
        <hr />
     
        <div class="mb-2">
            <label asp-for="Category">Category</label>
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger"></span>
            
        </div>
        <div class="mb-2">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
            
        </div>
         <div class="mb-2">
           
              <label asp-for="Description"></label>
            <textarea type="text"asp-for="Description" class="form-control"style="height:50px;" ></textarea>
             <span asp-validation-for="Title" class="text-danger"></span>
        </div>

    
          <div class="mb-2">
    <button type="submit" class="btn btn-warning" style="width:150px">DELETE</button>
        <a asp-controller="Blog" asp-action="Index" class="btn btn-primary">back</a>
            </div>
    </div>
    
</form>
@section Scripts{
  @{
        <partial Title="_ValidationScriptsPartial" />
  }
}

