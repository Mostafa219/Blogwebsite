@model Blog


<form method="post">
    <div class=" border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">create Blog</h2>
        </div>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

         <div class="mb-2">
            <label asp-for="Category">Category</label>
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger"></span>
            
        </div>
        <div class="mb-2">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
            
        </div>
         <div class="mb-2">
           
              <label asp-for="Description"></label>
            <textarea asp-for="Description" rows="3" class="form-control"></textarea>
             <span asp-validation-for="Title" class="text-danger"></span>
        </div>

   


          <div class="mb-2">
    <button type="submit" class="btn btn-warning"onclick="return ValidateInput()" style="width:150px">Create</button>
        <a asp-controller="Blog" asp-action="Index" class="btn btn-primary">back</a>
            </div>
    </div>
    
</form>
@section Scripts{
  @{
        <partial Title="_ValidationScriptsPartial" />


  }
}